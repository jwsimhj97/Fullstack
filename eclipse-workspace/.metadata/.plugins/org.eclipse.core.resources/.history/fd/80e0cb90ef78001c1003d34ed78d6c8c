--create table 테이블명 (컬럼명 자료형, 컬럼명 자료형, ....);
create table ex03(
	num1 number,
	name varchar2(3),
	num2 number(2),		-- 소수점뒤에 붙어도 포함되지 않고 생략됨
	num3 number(3,1)
);
select * from ex03;
insert into ex03 values (1,'aaa',11,12.3);
insert into ex03 values (2,'bbb',2,12.3);
insert into ex03 values (3,'bbb',33.33,12.3);	-- 소수점의 자릿수 외 값은 생략됨 33.33 -> 33
insert into ex03 values (4,'bbb',44,12.34); 	-- 소수점의 자릿수 외 값은 생략됨 12.34 -> 12.3
insert into ex03 values (5,'bbb',55,112.3);		-- 전체 자릿수의 값이 커서 안들어감
insert into ex03 values (1.1,'bbb',66,12.4);
insert into ex03 values (6,'한',66,12.3);
insert into ex03 values (7,'한글',77,12.3);

--------------------------------------------------------------

create table ex04(
	num number,
	name char(3),
	nalja date
);
select * from ex04;
insert into ex04 values (1, 'abc', '2022/01/19');
insert into ex04 values (2, 'abc', '2022-01-19');
insert into ex04 values (3, 'abc', '20220119');
insert into ex04 values (4, 'now', sysdate);	-- sysdate함수

--------------------------------------------------------------

create table ex05(num number);
select * from ex05;
alter table ex05 add name varchar2(3);
alter table ex05 modifi name varchar2(6);