package com.hi.step01;

import java.io.IOException;
import java.net.*;

public class Server {

	public static void main(String[] args) {
		ServerSocket serv=null;
		Socket sock=null;
		try {
			serv=new ServerSocket(5000);
			System.out.println("server> 클라이언트 입장 대기중...");
			sock=serv.accept();
			sock.getInetAddress();
			System.out.println("server> 접속됨");
		} catch (IOException e) {
			e.printStackTrace();
		}finally{
			try {
				sock.close();
				serv.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}

}
