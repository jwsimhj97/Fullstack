package com.room802;

public class Ex09 {

	public static void main(String[] args) {
//	  ¡Ù ¡Ù ¡Ú
//	  ¡Ù ¡Ú ¡Ú
//	  ¡Ú ¡Ú ¡Ú
		for(int i=0; i<3; i++){
			for(int j=0; j<3; j++){
				if(j<2-i){
					System.out.print('¡Ù');
				}else{
					System.out.print('¡Ú');
				}
			}
			System.out.println();
		}
		
		for(int i=0; i<3; i++){
			for(int j=0; j<3; j++){
				if(j<2-i){
					System.out.print(' ');
				}else{
					System.out.print(j+1);
				}
			}
			System.out.println();
		}
	}

}
