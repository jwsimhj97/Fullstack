package com.hi;

public class Ex10 implements Runnable {

	static int tot;
	int startnum;
	int endnum;
	public Ex10(int a, int b){
		startnum=a;
		endnum=b;
	}
	
	public void hap(){
		for(int i=startnum; i<=endnum; i++){
			tot+=i;
		}
	}
	
	@Override
	public void run() {
		hap();
	}
	
	public static void main(String[] args) {
		Ex10 me=new Ex10();
//		me.hap(1, 100);
//		System.out.println(me.tot);
		me.startnum=1;
		me.endnum=50;		
		Thread thr1=new Thread(me);
		me.startnum=51;
		me.endnum=100;		
		Thread thr2=new Thread(me);
		
		thr1.start();
		thr2.start();
		try {
			thr1.join();
			thr2.join();
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		
		System.out.println(tot);
	}

}
