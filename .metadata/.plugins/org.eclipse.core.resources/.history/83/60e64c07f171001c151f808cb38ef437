package soc.pj;

import java.awt.*;
import java.awt.event.*;

public class Sopj03 extends Frame{
	TextArea ta;
	
	public void Sopj03(){	// 게시글 list별 내용
		Panel listCoP=new Panel();	// 전체패널
		listCoP.setLayout(new BorderLayout());
		addWindowListener(new WindowAdapter() {		// p패널 창닫기
			@Override
			public void windowClosing(WindowEvent e) {
				dispose();
			}
		});
		
		
		
		ta=new TextArea("내용 ",3,10,TextArea.SCROLLBARS_HORIZONTAL_ONLY);
		ta.append("ddddddd");
		listCoP.add(ta);
		
		add(listCoP);
		setBounds(100, 100, 800, 600);
		setVisible(true);
	}

	public static void main(String[] args) {
		new Sopj03();
	}

}
